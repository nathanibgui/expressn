    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ realisation.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ realisation.adresse }}</td>
            </tr>
            <tr>
