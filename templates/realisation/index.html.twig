{% extends 'base.html.twig' %}

{% block title %}Realisation index{% endblock %}

{% block body %}
    <h1>Realisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Prix</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisation in realisations %}
            <tr>
                <td>{{ realisation['nom'] }}</td>
                <td>{{ realisation[0].adresse }}</td>
                <td>{{ realisation[0].cp }}</td>
                <td>{{ realisation[0].ville }}</td>
                <td>{{ realisation[0].prix }}</td>
                <td>{{ realisation[0].date ? realisation[0].date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_realisation_show', {'id': realisation[0].id}) }}">Voir +</a>
                    <a href="{{ path('app_realisation_edit', {'id': realisation[0].id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_realisation_new') }}">Create new</a>
{% endblock %}
