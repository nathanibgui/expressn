{% extends 'base.html.twig' %}

{% block title %}Intervention{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Interventions</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Client</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisation in realisations %}
            <tr>
                <td>{{ realisation['nom'] }}</td>
                <td>{{ realisation[0].adresse }}</td>
                <td>{{ realisation[0].cp }}</td>
                <td>{{ realisation[0].ville }}</td>
                <td>{{ realisation[0].prix }} â‚¬</td>
                <td>{{ realisation['Categorie'] }}</td>
                <td>{{ realisation[0].date ? realisation[0].date|date('d-m-Y') : '' }}</td>
                <td>
                    <a class="btn btn-primary mr-2" href="{{ path('app_realisation_show', {'id': realisation[0].id}) }}">Voir +</a>
                    <a class="btn btn-success"      href="{{ path('app_realisation_edit', {'id': realisation[0].id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune intervention pour le moment</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a class="btn btn-success"  href="{{ path('app_realisation_new') }}">New</a>

        </div>
    </div>
</div>
{% endblock %}
